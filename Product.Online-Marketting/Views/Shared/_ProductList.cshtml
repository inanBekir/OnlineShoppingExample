@using Product.Online_Marketting.Models;
@model IEnumerable<ProductModel>

<div class="row">


    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">


                <img class="card-img-top" src="~/Upload/@urun.Image" alt="@urun.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h5>
                    <p class="card-text pt-2 description">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                     <i class="fas fa-dollar-sign" aria-hidden="true"></i>
                    @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-right">
                     <i class="fas fa-angle-double-right"></i>
                    Show Product
                    </a>
                </div>
            </div>
        </div>
    }


</div>